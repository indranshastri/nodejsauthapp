doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Welcome
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans")
  body
      nav.navbar.navbar-default.navbar-static-top
       .container
         .navbar-header
           button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
             span.sr-only Toggle navigation
             span.icon-bar
             span.icon-bar
             span.icon-bar
           a.navbar-brand(href='/') Node Auth
         #navbar.navbar-collapse.collapse
           ul.nav.navbar-nav
             li(class=(title == 'Members') ? 'active' : null)
               a(href='/') Members
             li(class=(title == 'About') ? 'active' : null)
               a(href='/about') About
           ul.nav.navbar-nav.navbar-right
             if user
               li.dropdown
                 a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
                   span #{user.name || user.email} &nbsp;
                   i.caret
                 ul.dropdown-menu
                   li
                     a(href='/users/profile') Profile
                   li.divider(role='separator')
                   li
                     a(href='/users/logout') Logout
             else
               li(class=(title == 'Log in') ? 'active' : null)
                 a(href='/users/login') Log in
               li(class=(title == 'Register') ? 'active' : null)
                 a(href='/users/register') Register
   
      //- /.nav-collapse
      .container
        != messages()
        block content
    
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
      script(src='/javascripts/bootstrap.js')