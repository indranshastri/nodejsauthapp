extends layout

block content
  h1.page-header Login 
  p Please Login Below
  form(action="/users/login" method="post" )
    .form-group
     label Username
     input.form-control#username(type="text", name="username" placeholder="Enter your username" )

    .form-group
     label Password
     input.form-control#password(type="password", name="password" placeholder="Enter your password" )
    
    input.btn.btn-primary(type="submit", name="submit",value="Log In")